@model CMSNews.Models.ViewModels.CommentViewModel

@{
    ViewBag.Title = "Edit";
}




<h2>ویرایش رکورد</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CommentId)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.RegisterDate)
    @Html.HiddenFor(model => model.NewsId)

    <div class="form-group">
        @Html.LabelFor(model => model.CommentText, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CommentText)
            @Html.ValidationMessageFor(model => model.CommentText)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.Name
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.Email
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NewsId, "عنوان خبر", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.News.NewsTitle
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="ذخیره تغییرات" class="btn btn-warning" /> |
            @Html.ActionLink("برگشت به لیست", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
