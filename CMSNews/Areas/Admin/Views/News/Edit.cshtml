@model  CMSNews.Models.ViewModels.NewsViewModel

@{
    ViewBag.Title = "Edit";
}




<h2>ویرایش رکورد</h2>
@using (Html.BeginForm("Edit", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.NewsId)
        @Html.HiddenFor(model => model.ImageName)
        @Html.HiddenFor(model => model.RegisterDate)
        @Html.HiddenFor(model => model.Like)
        @Html.HiddenFor(model => model.See)
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.NewsTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsTitle)
                @Html.ValidationMessageFor(model => model.NewsTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                <img src="/images/news/@Model.ImageName" class="img60x60" id="impPrev" />
                <input type="file" id="imgupload" name="imgUpload" onchange="showPreview(this)" value="nophoto.png" />
            </div>
        </div>





        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsGroupId, "NewsGroupId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NewsGroupId", String.Empty)
                @Html.ValidationMessageFor(model => model.NewsGroupId)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-warning"/> |
                @Html.ActionLink("برگشت به لیست", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/main-script.js"></script>
}
