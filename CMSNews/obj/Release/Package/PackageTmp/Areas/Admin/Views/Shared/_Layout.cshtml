<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="rtl">


    @*<div class="container body-content">
            @RenderBody()
        </div>*@


    <div class="d-flex" id="wrapper">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">پنل مدیریت @User.Identity.Name</div>
            <div class="list-group list-group-flush">
                <a href="/admin" class="list-group-item list-group-item-action bg-light">داشبورد</a>
                <a href="/Admin/NewsGroups/Index" class="list-group-item list-group-item-action bg-light">مدیریت گروه اخبار</a>
                <a href="/Admin/News/Index" class="list-group-item list-group-item-action bg-light">مدیریت اخبار</a>
                <a href="/Admin/Users/Index" class="list-group-item list-group-item-action bg-light">مدیریت کاربران</a>
                <a href="/Admin/Comments/Index" class="list-group-item list-group-item-action bg-light">مدیریت نظرات</a>
                <a href="/Account/Logout" class="list-group-item list-group-item-action bg-light">خروج</a>
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-green" id="menu-toggle">باز/بسته</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/">خانه <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">خروج</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                <p>
                    @RenderBody()
                </p>
            </div>
        </div>
    </div>












    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script src="/ckeditor/ckeditor.js"></script>
    <script src="/ckeditor/adapters/jquery.js"></script>
    <script>
        $(function () {
            $('#Description').ckeditor();
        });
    </script>

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>